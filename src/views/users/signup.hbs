<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
               <center><h3>REGISTRAR</h3></center> 
            </div>
            <div class="card-body">
                <!-- se mandan los datos del formulario mendiante post -->
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nick" placeholder="Nick" value="{{nick}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="E-mail" value="{{email}}">

                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="{{confirm_password}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            SignUp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>