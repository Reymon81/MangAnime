<div class="container m-4">
    <div class="row">
        <div class="col-md-4 ml-auto">
            <div class="card">
                <div class="card-header">
                    <center><h1>LOGIN</h1></center>
                </div>
                <img src="/img/yakusoku2.png" class="rounded-circle mx-auto d-block m-4  logo" alt="Logo" />
                <div class="card-body">
                    <form action="/users/signin" method="POST">
                        <div class="form-group">
                            <input type="nick" class="form-control" name="nick" placeholder="Nick" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </form>
                </div>            
            </div>
        </div>
        <div class="col-md-3">
            <img src="/img/kimetsu2.png" class="img-fluid">
        </div>
    </div>
</div>

